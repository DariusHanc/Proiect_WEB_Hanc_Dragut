@page
@model Proiect_Dragut_Hanc.Pages.Buyings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<body style="background: url('https://img.freepik.com/premium-photo/white-marble-texture-background-abstract-marble-texture-natural-patterns-design_41389-491.jpg?w=1060') ">
<h4>Buying</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Buying.ID" />
            <div class="form-group">
                <label asp-for="Buying.ClientID" class="control-label"></label>
                <select asp-for="Buying.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Buying.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buying.ProductID" class="control-label"></label>
                <select asp-for="Buying.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="Buying.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buying.OrderDate" class="control-label"></label>
                <input asp-for="Buying.OrderDate" class="form-control" />
                <span asp-validation-for="Buying.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
