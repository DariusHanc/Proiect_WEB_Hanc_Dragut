}

<h1>Get Ready!</h1>
<body style="background: url('https://img.freepik.com/free-vector/white-abstract-background_23-2148804712.jpg?w=2000') ">
<p>
    <a asp-page="Create">Create New</a>
</p>

    <div style="text-align: center;">
        <img src="https://assets.grooveapps.com/images/5eec1a965b963f001977b951/1629825950_Top-5-Growth-Marketing-Tips-To-Double-Your-Sales.jpg.jpg" style="border: 1px solid black; width: 50%; height: auto;" />
    </div> 

<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.Admin[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Admin)
        {
            <tr>
            
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AdminID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.AdminID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AdminID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
   

